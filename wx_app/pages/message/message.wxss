/* pages/message/message.wxss */
.topbar{
  height: 10%;
}
.SecMessage{
  width: 100%;
  height: 100%;
}
.SecMessage .Message{
  background-color: white;
  display: flex;
  flex-direction: row;
  height: 150rpx;
  width: 100%;
  /* justify-content: center; */
  align-items: center;
}
.SecMessage .Message .Picture{
  display: flex;
  /* padding-left: 5rpx; */
  justify-content: center;
  align-items: center;
  flex-grow: 3;
  /* width: 15%; */
}
.SecMessage .Message .MessageDesc{
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* padding: 20rpx; */
  height: 100%;
  flex-grow: 14;
  /* width: 70%; */
}
.SecMessage .Message .MessageDesc .Name{
  display: flex;
  color: black;
  font-weight: 500;
  flex-grow: 1;
  flex-direction: column-reverse;
  /* font-size: large; */
}
.SecMessage .Message .MessageDesc .jyMessage{
  color: gray;
  font-weight: 300;
  font-size: small;
  flex-direction: column;
  flex-grow: 1;
}
.SecMessage .Message .Other{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx;
  height: 100%;
  /* width: 15%; */
  flex-grow: 3;
}
.SecMessage .Message .Other .Time{
  display: flex;
  flex-direction: row-reverse;
  color: gray;
  font-weight: 300;
  font-size: small;
}
.SecMessage .Message .Other .Num{
  display: flex;
  flex-direction: row-reverse;
  /* flex-grow: 1; */
}
.SecMessage .Message .Other .Num .icon{
  padding-left: 8rpx ;
  padding-right: 8rpx ;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  color: white;
  background-color: red;
  min-width: 24rpx;
  height: 40rpx;
  font-size: small;
  border-radius: 40rpx;
}
.AIChat{
  top:75%;
  right: 5%;
  display: flex;
  flex-direction: row;
  position: fixed;
  border-radius: 60rpx;
  background-color: #00AC84;
  align-items: center;
  justify-content: center;
  z-index: 3;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.AIChat .Name{
  color: white;
  font-weight: bold;
  margin: 5rpx;
  margin-left: 10rpx;
}