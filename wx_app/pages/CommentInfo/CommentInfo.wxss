/* pages/CommentInfo/CommentInfo.wxss */
.page{
  display: flex;
  flex-direction: column;
}
.userid{
  display: flex;
  flex-direction:row;
  align-items:center;
}
.container-id{
  color: black;
  font-weight: bolder;
}
.sj{
  font-size:small;
  color: gray;
}
.detail{
  color:gray;
}

.moments{
  margin: 3%;
}
.documents{
  margin: 3%;
}
.documents .fonttext{
  text-overflow:ellipsis; 
  word-wrap:break-word;
}
.photo-view{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.photo{
  background: rgb(255, 166, 0);  
  float: left;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.dzpl{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.correct{
  display: flex;
  flex-direction: row;
}
.correct .dm{
  display: flex;
  flex-direction: row-reverse;
  flex-grow: 1;
}
