.discuss{
  margin: 10rpx;
}
.discuss .message{
  margin-left:3rem;
  text-overflow:ellipsis; 
  word-wrap:break-word;
}
.discuss .childChat{
  margin-left:1rem;
  margin-top: 1rem;
}
.discuss .childChat .userid{
  display: flex;
  flex-direction:row;
  align-items:center;
}
.discuss .childChat .userid .container-id{
    color: black;
    font-weight: bold;
    font-size: 200;
}
.discuss .childChat .userid .sj{
  font-size:80;
  color: gray;
}
.discuss .childChat .message{
  font-size: 100;
  margin-left:2rem;
  text-overflow:ellipsis; 
  word-wrap:break-word;
}
.foot {
  width: 686rpx;
  padding: 17rpx 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0rpx -1rpx 4rpx 0rpx rgba(0, 0, 0, 0.08);
  position: fixed;
  bottom: 0;
  left: 0;
}