/* pages/regist/regist.wxss */
page{
  height: 100%;
  background-color: rgb(0, 172, 132);
}
.regist{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.welcome{
  padding: 5%;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}
/* 默认形状 */
.welcome .eye{
  display: flex;
  flex-direction: row;
  margin-top: 100rpx;
  height: 150rpx;
}
.welcome .eye .left{
  display: flex;
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(0, 172, 132);
  border-radius: 100%;
  border-style: solid;
  border-width: 40rpx;
  animation-name:myeye;
  animation-duration:4s;
  animation-iteration-count: infinite;
  box-shadow:1px 1px 1px 1px rgb(233, 233, 233);
}
.welcome .eye .right{
  display: flex;
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(0, 172, 132);
  border-radius: 100%;
  margin-left: 80rpx;
  border-style: solid;
  border-width: 40rpx;
  animation-name:myeye;
  animation-duration:4s;
  animation-iteration-count: infinite;
  box-shadow:1px 1px 1px 1px rgb(233, 233, 233);
}
@keyframes myeye{
  0%{height: 100rpx;}
  40%{height: 100rpx;}
  47%{height: 0rpx;}
  50%{height:100rpx;}
  53%{height: 0rpx;}
  60%{height: 100rpx;}
  100%{height: 100rpx;}
}
