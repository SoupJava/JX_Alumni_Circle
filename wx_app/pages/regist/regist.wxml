<!--pages/regist/regist.wxml-->
<view class="regist">
  <view class="welcome">
    <view>
      您好！！！
    </view>
    <view>
      欢迎使用交新校友圈！！！
    </view>
    <view class='eye{{sex==""?"":(sex==0?0:1)}}'>
      <view class="left">
        <view class="leftl"></view>
      </view>
      <view class="right">
        <view class="rightl"></view>
      </view>
    </view>
  </view>
  <view class="bg">
    <view class='box'>
      <van-cell-group>
        <van-field model:value="{{ username }}" clearable left-icon="smile" label="用户名" placeholder="请输入用户名" bind:click-icon="onClickIcon" />
      </van-cell-group>
      <van-cell-group>
        <van-field model:value="{{ jxid }}" clearable left-icon="manager" label="账号" placeholder="请输入账号" bind:click-icon="onClickIcon" />
      </van-cell-group>
      <van-cell-group>
        <van-field model:value="{{ telephone }}" clearable left-icon="phone-circle" label="手机号" type="number" placeholder="请输入手机号" bind:click-icon="onClickIcon" />
      </van-cell-group>
      <van-cell-group>
        <van-field model:value="{{ school }}" clearable left-icon="location" label="学校" type="number" placeholder="请输入学校名称" bind:click-icon="onClickIcon" />
      </van-cell-group>
      <van-cell-group>
        <van-field model:value="{{ password }}" type="password" left-icon="youzan-shield" label="密码" placeholder="请输入密码" border="{{ false }}" />
      </van-cell-group>
      <van-cell-group>
        <van-field model:value="{{ againpassword }}" type="password" label="确认密码" left-icon="umbrella-circle" placeholder="请确认密码" border="{{ false }}" />
      </van-cell-group>
      <view class="week">
        <van-icon name="friends" />
        <view class="label">性别</view>
        <view class="sel">
          <view class="sel2">
            <van-radio-group value="{{ sex }}" bind:change="ChangeSex" direction="horizontal">
              <van-radio name="0" icon-size="30rpx">
                <view class="text">
                  男
                </view>
              </van-radio>
              <van-radio name="1" icon-size="30rpx" style="margin-left:20rpx;">
                <view class="text">
                  女
                </view>
              </van-radio>
            </van-radio-group>
          </view>
        </view>
      </view>
      <van-button type="primary" size="large" bind:tap="regist">注 册 并 登 录</van-button>
    </view>
  </view>
</view>
<van-toast id="van-toast" />