<!--pages/tree/tree.wxml-->
<!--页面根标签-->
<van-notify id="van-notify" />
<view class="content">
  <image class='background' src="cloud://cloud1-7g48m2a6e2ac093c.636c-cloud1-7g48m2a6e2ac093c-1320787210/sky.png" mode="heightFix"></image>
</view>
<view>
  <image class='grass' src="cloud://cloud1-7g48m2a6e2ac093c.636c-cloud1-7g48m2a6e2ac093c-1320787210/grass.png" mode="widthFix"></image>
</view>
<view bind:tap="AIChat" data-id="{{userinfo.openid}}">
  <image class='tree' src="cloud://cloud1-7g48m2a6e2ac093c.636c-cloud1-7g48m2a6e2ac093c-1320787210/image.png" mode="aspectFill"></image>
</view>
<view bind:tap="back">
  <image class='back' src="cloud://cloud1-7g48m2a6e2ac093c.636c-cloud1-7g48m2a6e2ac093c-1320787210/back.png" mode="widthFix"></image>
</view>
<view bind:tap="watering">
  <image class='shuihu' src="cloud://cloud1-7g48m2a6e2ac093c.636c-cloud1-7g48m2a6e2ac093c-1320787210/shuihulogo.png" mode="widthFix"></image>
</view>
<view wx:if="{{thirsty}}">
  <image class='water' src="cloud://cloud1-7g48m2a6e2ac093c.636c-cloud1-7g48m2a6e2ac093c-1320787210/water.png" mode="widthFix"></image>
</view>
<view>
  <image class='dowater' style="animation-name:doing{{doingcontrol}};" src="cloud://cloud1-7g48m2a6e2ac093c.636c-cloud1-7g48m2a6e2ac093c-1320787210/shuihu.png" mode="widthFix"></image>
</view>
