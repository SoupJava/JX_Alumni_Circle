/* pages/tree/tree.wxss */
page{
  height:100%;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -3;
}
.grass{
  width: 100%;
  height: 100%;
  position:fixed;
  bottom: 0;
  z-index: -2;
}
.tree{
  height: 60%;
  width: 100%;
  position:fixed;
  bottom: 7%;
}
.back{
  width: 20%;
  position:fixed;
  z-index: 10;
}
.shuihu{
  width: 30%;
  position: fixed;
  right: 4%;
}
.water{
  width: 30%;
  position: fixed;
  right: 10%;
  bottom: 15%;
}
.knowledge{
  width: 30%;
  position: fixed;
  right: 4%;
  top:12%;
}
.dowater{
  width: 40%;
  bottom:150%;
  position: fixed;
  animation-duration: 6s;
  animation-iteration-count: 1;
}
@keyframes doing1 {
  0%{
    left: 10%;
    bottom: 12%;
    display: none;
  }
  25%{
    left: 35%;
    bottom: 10%;
    display: block;
  }
  50%{
    left: 60%;
    bottom: 12%;
    display: block;
  }
  75%{
    left: 35%;
    bottom: 10%;
    display: block;
  }
  100%{
    left: 10%;
    bottom: 12%;
    display: none;
  }
}
.data{
  width: 100%;
  position:fixed;
  bottom: 2%;
  font-size: 25px;
  color: white;
}
.texxt{
  text-align: center;
}